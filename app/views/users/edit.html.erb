<% if @user.errors.any? %>
   <h3><%= @user.errors.count %>errors prohibited this user from being saved:</h3>
   <ul>
     <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
  <% end %> 

<div class="container">
    <div class="row">
      <div class="col-sm-12 col-mg-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <%= form_with model: @user do |f| %>
            <div class= "form_group">
              <label for="inputName">Name</label><br>
               <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
            </div>
            <div class= "form_group">
              <label for="inputImage">Image</label><br>
               <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
            <label for="inputintroduction">Introduction</label><br>
            <%= f.text_area :introduction, autofocus: true, id:"inputintroduction" %><br>
             <%= f.submit "Update User", class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
</div>
