<div class="container px-5 px-sm-0">
<% if @book.errors.any? %>
   <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
   <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-mg-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class= "form_group">
          <label for="inputtitle">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"inputtitle" %><br>
        </div>
        <div class= "form_group">
          <label for="inputbody">Opinion</label><br>
           <%= f.text_area :body, autofocus: true, id:"inputbody" %><br>
        </div>
        <div class= "form_group">
          <%= f.submit "Update Book", class: "btn btn-success"  %>
          <% end %><br>
        </div>
        <%= link_to "Show", book_path(@book) %>|
        <%= link_to "Back", '/books' %>
    </div>
  </div>
</div>